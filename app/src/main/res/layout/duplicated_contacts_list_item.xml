<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingTop="9dp"
        android:paddingEnd="20dp"
        android:paddingBottom="9dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/telegrotesknext_regular"
                android:textSize="@dimen/fontSizeMedium" />

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/telegrotesknext_regular"
                android:textSize="@dimen/fontSizeSmaller" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|center"
                android:orientation="horizontal"
                android:paddingTop="8dp">

                <TextView
                    android:id="@+id/numLocal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="1dp"
                    android:fontFamily="@font/telegrotesknext_regular"
                    android:text="1x"
                    android:textSize="@dimen/fontSizeSmall" />

                <ImageView
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_marginEnd="6dp"
                    android:src="@drawable/ic_smartphone_outline"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/numRemote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="1dp"
                    android:fontFamily="@font/telegrotesknext_regular"
                    android:text="1x"
                    android:textSize="@dimen/fontSizeSmall" />

                <ImageView
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:src="@drawable/ic_cloud_computing_outline"
                    tools:ignore="ContentDescription" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:padding="10dp"
            android:rotation="-90"
            android:src="@drawable/ic_arrow_down"
            tools:ignore="ContentDescription" />
    </LinearLayout>
</LinearLayout>
