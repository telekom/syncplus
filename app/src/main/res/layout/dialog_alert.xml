<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <TextView
        android:id="@android:id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dialogPadding"
        android:layout_marginTop="@dimen/marginTopMedium"
        android:layout_marginEnd="@dimen/dialogPadding"
        android:fontFamily="@font/telegrotesknext_medium"
        android:lineHeight="25dp"
        android:text="Kontakte nicht synchronisiert"
        android:textColor="@color/textGreyColor"
        android:textSize="@dimen/fontSizeMedium"
        tools:ignore="UnusedAttribute" />

    <TextView
        android:id="@android:id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dialogPadding"
        android:layout_marginTop="@dimen/marginTop"
        android:layout_marginEnd="@dimen/dialogPadding"
        android:fontFamily="@font/telegrotesknext_regular"
        android:lineHeight="21dp"
        android:text="Wenn Sie diesen Vorgang abbrechen, werden Ihre bisher auf diesem GerÃ¤t vorhandenen Kontakte nicht synchronisiert."
        android:textColor="@color/textGreyColor"
        android:textSize="@dimen/fontSizeSmall"
        tools:ignore="UnusedAttribute" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dialogPadding"
        android:paddingEnd="@dimen/dialogPadding">

        <com.google.android.material.button.MaterialButton
            android:id="@android:id/button1"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="0.5"
            android:fontFamily="@font/telegrotesknext_regular"
            android:letterSpacing="-0.02"
            android:paddingRight="4dp"
            android:shadowColor="@android:color/transparent"
            android:shadowDx="0"
            android:shadowDy="0"
            android:singleLine="true"
            android:text="@string/button_title_cancel"
            android:textAlignment="textStart"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/fontSizeVerySmall"
            app:cornerRadius="4dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@android:id/button2"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="0.7"
            android:fontFamily="@font/telegrotesknext_regular"
            android:letterSpacing="-0.02"
            android:paddingLeft="4dp"
            android:shadowColor="@android:color/transparent"
            android:shadowDx="0"
            android:shadowDy="0"
            android:singleLine="true"
            android:text="Kopieren abbrechen"
            android:textAlignment="textEnd"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/fontSizeVerySmall"
            app:cornerRadius="4dp" />

    </LinearLayout>

</LinearLayout>
